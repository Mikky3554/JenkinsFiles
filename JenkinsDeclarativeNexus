	agent any
	tools {
		maven 'maven'
	}
	stages {
		stage('Build') {
			steps {
				git "https://github.com/kphbuser/Hello-world.git"
			}
		}
		stage('Maven-Build') {
			steps {
				sh 'mvn clean package -DskipTests'
			}
		}
		stage(PushToNexusSnapshot){
			steps {
				nexusArtifactUploader artifacts: [[artifactId: 'maven-project', classifier: '', file: '/var/lib/jenkins/workspace/CompleteFlow_Pipeline/webapp/target/webapp.war', type: 'war']], credentialsId: 'nexus_Decla', groupId: 'com.example.maven-project', nexusUrl: '54.254.248.255:8081/nexus', nexusVersion: 'nexus3', protocol: 'http', repository: 'NewSnapshot', version: '1.0-SNAPSHOT'
			}
		}


	}
}
